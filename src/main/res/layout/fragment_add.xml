<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:layout_gravity="center_horizontal"
    tools:context=".AddFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/linear_layout_add_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/alumni_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/teal_200"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:text="ADD ALUMNI"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="136dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Name of Alumni"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:inputType="text"
                        android:id="@+id/alumni_name"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Year of Passing"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_passing_year"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Contact No"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_contact_no"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="136dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Email id"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_email_id"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="136dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Job Status "
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_job_status"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Name of Company"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_company_name"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="136dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Address of Company"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_company_address"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="132dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Designation"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_designation"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp"
                        android:inputType="text"
                        />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Project Details of UG"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_project_details"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp"
                        android:inputType="text"
                        />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="136dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Social Profiles"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_social_profile"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_weight="1"
                        android:id="@+id/button_save"
                        android:layout_margin="10dp"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save" />

                    <Button
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:id="@+id/button_clear"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Clear" />
                </LinearLayout>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</FrameLayout>