<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bag"
    android:layout_height="match_parent"
    tools:context=".Result">

    <TextView
        android:id="@+id/alumni_details"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:background="@color/main_outer_circle"
        android:text="ALUMNI DETAILS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="match_parent">



        <LinearLayout

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="2dp"
            android:layout_height="fill_parent">



            <LinearLayout
                android:layout_marginTop="50dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Name of Alumni"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:inputType="text"
                    android:id="@+id/alumni_name_detail"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="133dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Year of Passing"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_passing_year_detail"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Contact No"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_contact_no_detail"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="136dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Email id"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_email_id_detail"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="136dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Job Status"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_job_status_detail"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Name of Company"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_company_name_detail"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Address of Company"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_company_address_detail"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="132dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Designation"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_designation_detail"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp"
                    android:inputType="text"
                    />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Project Details of UG"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_project_details_detail"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp"
                    android:inputType="text"
                    />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Social Profiles"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_social_profile_detail"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content"
            >

                <Button
                    android:id="@+id/button_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="EXIT"
                    android:focusable="false"
                    android:layout_marginLeft="100dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="100dp"/>

                <!--                <Button-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:id="@+id/button_clear"-->
                <!--                    android:layout_margin="10dp"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="Clear" />-->
            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>