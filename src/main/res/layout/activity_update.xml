<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/main"
    tools:context=".UPDATE">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/alumni_update"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/teal_200"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:text="Update ALUMNI "/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="128dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Name of Alumni"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:inputType="text"
                        android:id="@+id/alumni_name_update"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Year of Passing"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_passing_year_update"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Contact No"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_contact_no_update"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="136dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Email id"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_email_id_update"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="136dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Job Status "
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_job_status_upate"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Name of Company"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_company_name_update"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Address of Company"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_company_address_update"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="132dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Designation"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_designation_update"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp"
                        android:inputType="text"
                        />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Project Details of UG"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_project_details_update"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="172dp"
                        android:layout_height="38dp"
                        android:inputType="text"
                        />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Social Profiles"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/alumni_social_profile_update"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:layout_width="172dp"
                        android:layout_height="38dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_weight="1"
                        android:id="@+id/button_save_update"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="save" />

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/button_clear_update"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Clear" />

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/button_delete_update"
                        android:layout_margin="10dp"
                        android:onClick="btn_delete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delete" />

                </LinearLayout>



            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!--</LinearLayout>-->


