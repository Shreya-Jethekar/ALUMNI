<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_margin="10dp"
    android:textAlignment="center"
    android:layout_height="wrap_content"
    android:background="@drawable/border">

    <ScrollView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_layout_add_dialog_i"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/alumni_add_i"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/teal_200"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textAlignment="center"
                android:text="ALUMNI Details"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Name of Alumni"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:inputType="text"
                    android:id="@+id/alumni_name_i"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="133dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Year of Passing"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_passing_year_i"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Contact No"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_contact_no_i"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="136dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Email id"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_email_id_i"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="136dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Job Status of Alumni "
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_job_status_i"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Name of Company"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_company_name_i"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Address of Company"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_company_address_i"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="132dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Designation"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_designation_i"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp"
                    android:inputType="text"
                    />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Project Details of UG"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_project_details_i"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="172dp"
                    android:layout_height="38dp"
                    android:inputType="text"
                    />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Social Profiles"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/alumni_social_profile_i"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:layout_width="172dp"
                    android:layout_height="38dp" />
            </LinearLayout>

